pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/krahyor/jartkitv.git'
            }
        }

        stage('Run Tests in venv') {
            agent {
                docker { image 'python:3.11' }
            }
            steps {
                sh '''
                    python -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    pip install sonar-scanner coverage
                    pytest --cov=app tests/
                '''
                withSonarQubeEnv('sonarqube-7.2') {
                    sh '''
                        . venv/bin/activate
                        sonar-scanner
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t fastapi-app:latest .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh 'docker rm -f fastapi-app || true'
                sh 'docker run -d --name fastapi-app -p 8000:8000 fastapi-app:latest'
            }
        }
    }
}
